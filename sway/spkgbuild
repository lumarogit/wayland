# description	: Tiling Wayland compositor and replacement for the i3 window manager 
# homepage	: https://swaywm.org/
# depends	: json-c pango pcre2 swaybg ttf-dejavu wlroots

name=sway
version=1.8.1
release=2
source="https://github.com/swaywm/sway/releases/download/$version/sway-$version.tar.gz"

build() {
	venom-meson $name-$version build \
		-Ddefault-wallpaper=false \
    		-Dzsh-completions=false \
    		-Dbash-completions=false \
    		-Dfish-completions=false \
		-Dswaybar=false \
		-Dswaynag=false \
		-Dtray=disabled \
    		-Dxwayland=disabled
	meson compile -C build
	DESTDIR=$PKG meson install --no-rebuild -C build
	
	# clean
	rm -r $PKG/usr/share/bash*
	rm -r $PKG/usr/share/fish
	rm -r $PKG/usr/share/zsh
	rm -r $PKG/usr/share/backgrounds
}
