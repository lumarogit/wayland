# description	: Generates status bar to use with i3bar, dzen2 or xmobar
# homepage	: https://i3wm.org/i3status
# depends	: alsa-lib asciidoc confuse libnl meson xmlto yajl

name=i3status
version=2.14
commit=8a918438ed5b1800cda21d53ddaf130e7936cc9b
release=2
backup="etc/i3status.conf"
source="https://i3wm.org/i3status/$name-$version.tar.xz"

build() {
	export XML_CATALOG_FILES=/etc/xml/catalog
	venom-meson $name-$version build -Dpulseaudion=false
	meson compile -C build
	DESTDIR=$PKG meson install --no-rebuild -C build
}
